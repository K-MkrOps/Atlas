{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "XRE_collider.schema.json",
  "title": "XRE_collider glTF extension",
  "type": "object",
  "description": "serialization extension for Atlas collider components",
  "allOf": [{ "$ref": "glTFProperty.schema.json" }],
  "properties": {
    "type": {
      "$ref": "colliderType.schema.json"
    },
    "bodyType": {
      "$ref": "bodyType.schema.json"
    },
    "isTrigger": {
      "type": "boolean"
    },
    "staticFriction": { "type": "number" },
    "dynamicFriction": { "type": "number" },
    "restitution": { "type": "number" },
    "vertices": {
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "indices": {
      "type": "array",
      "items": {
        "type": "number"
      }
    },
    "collisionLayer": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "string"
        }
      ]
    },
    "collisionMask": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "string"
        }
      ]
    },
    "contactOffset": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "string"
        }
      ]
    },
    "restOffset": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "string"
        }
      ]
    },
    "scale": {
      "$ref": "vec3.schema.json"
    }
  },
  "extensions": {},
  "extras": {}
}
